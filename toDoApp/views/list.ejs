<%- include("header") -%>
    <div id="heading" class="box">
        <h1><%= listTitle %> </h1>
    </div>
    
    <div class="box">
        <% if(items.length > 0){ %>
            <% for(let i=0; i < items.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= items[i] %> </p>
            </div>
            <% } %>
        <% } %>
    
        <form action="/" method="post" class="item">
            <input type="text" name="todo" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
    <%- include("footer") -%>